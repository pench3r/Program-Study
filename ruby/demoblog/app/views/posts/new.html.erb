<% content_for :page_title, "Edit Post" %>

<div class="section">

	<%= simple_form_for @post do |f| %>
		<div class="field">
			<div class="control">
				<%= f.input :title, input_html: {class: 'input is-info'}, wrapper: false, label_html: { class: 'label' } %>
			</div>
		</div>
		<div class="field">
			<div class="control">
				<%= f.input :content, input_html: {class: 'textarea'}, wrapper: false, label_html: { class: 'label' } %>
			</div>
		</div>
		<%= f.button :submit, 'Create New post', class: "button is-info" %>
	<% end %>
</div>
