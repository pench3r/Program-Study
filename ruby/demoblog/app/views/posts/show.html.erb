<% content_for :page_title, @post.title %>


<section class="section">
	<div class="container">
		<nav class="level">
			<div class="level-left">
			</div>

			<div class="level-right">
				<p class="level-item">
					<%= link_to 'Edit', edit_post_path(@post), class: 'button is-info' %>
				</p>
				<p class="level-item">
					<%= link_to 'Delete', post_path(@post), method: :delete, class: 'button is-danger', data: {confirm: 'Are you sure!'} %>
				</p>
			</div>


		</nav>
		<hr />
		<div class="content">
			<%= @post.content %>
		</div>	
	</div>
</section>

<section class="section comments">
	<div class="container">
		<h2 class="subtitle is-5"><strong><%= @post.comments.count %> Comments</strong></h2>
		<%= render @post.comments %>
		<div class="comment-form">
			<hr />
			<h3 class="subtitle is-3">Leave a reply</h3>
			<%= render 'comments/form' %>
		</div>
	</div>
</section>

